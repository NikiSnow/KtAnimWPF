<Window x:Class="WpfAnimations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programmatic Animation" Height="300" Width="400">
    <Canvas>
        <Ellipse x:Name="animatedEllipse" Width="40" Height="40" Fill="Red"
                 Canvas.Left="0" Canvas.Top="100"/>
        <Button x:Name="toggleButton" Content="Остановить" 
                Click="ToggleAnimation_Click" Width="100" Height="30"
                Canvas.Left="150" Canvas.Top="10"/>
    </Canvas>
</Window>